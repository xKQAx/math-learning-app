    <script src="/js/numberFriends.js"></script>
    <script>
        // Funci贸n para completar la lecci贸n
        function completeLesson(action) {
            const lessonId = 'numberFriends'; // Identificador 煤nico de la lecci贸n

            // Enviar solicitud al servidor para marcar la lecci贸n como completada
            fetch('/progress/complete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ lessonId })
            })
            .then(response => {
                if (response.ok) {
                    // Redirigir seg煤n la acci贸n
                    if (action === 'play-again') {
                        window.location.href = '/games/numberFriends'; // Redirige para jugar de nuevo
                    } else if (action === 'go-home') {
                        window.location.href = '/progress'; // Redirige a la p谩gina de progreso
                    }
                } else {
                    console.error('Error al completar la lecci贸n');
                }
            })
            .catch(error => console.error('Error:', error));
        }

        // Simulaci贸n: Mostrar el bot贸n de finalizar lecci贸n al completar la actividad
        function showCompleteLessonButton() {
            const completeButton = document.getElementById('completeLessonButton');
            completeButton.style.display = 'block'; // Mostrar el bot贸n
        }

        // Simulaci贸n: Generar n煤meros y detectar cuando se completa la actividad
        document.addEventListener('DOMContentLoaded', () => {
            const numbersList = document.getElementById('numbers-list');
            const numbers = [3, 7, 12, 5, 8]; // Simulaci贸n de n煤meros generados
            numbers.forEach(num => {
                const li = document.createElement('li');
                li.textContent = num;
                numbersList.appendChild(li);
            });

            // Simula completar la actividad
            setTimeout(showCompleteLessonButton, 5000); // Muestra el bot贸n despu茅s de 5 segundos
        });
    </script>
