                <button id="finishLessonButton" class="control-btn">Finalizar Lecci√≥n</button>
            </div>
        </div>

    <script src="/js/differences.js"></script>
    <script>
        // Simulaci√≥n de finalizaci√≥n de la lecci√≥n
        function completeLesson() {
            const lessonId = 'differences'; // Identificador √∫nico de la lecci√≥n

            // Enviar solicitud al servidor para marcar la lecci√≥n como completada
            fetch('/progress/complete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ lessonId })
            })
            .then(response => {
                if (response.ok) {
                    // Redirigir a la p√°gina de progreso
                    window.location.href = '/progress';
                } else {
                    console.error('Error al completar la lecci√≥n');
                }
            })
            .catch(error => console.error('Error:', error));
        }

        // Simula la finalizaci√≥n del √∫ltimo ejercicio
        document.getElementById('finishLessonButton').addEventListener('click', completeLesson);
    </script>
</body>
</html>